<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingActivity">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/buah_buahn" />

    <TextView
        android:id="@+id/txt_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_login"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_extra_bold"
        android:gravity="center"
        android:text="Indonesian #1 Food Delivery and Dining App"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_onboarding"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/txt_onboarding"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FF0000"
            android:backgroundTint="#52252323" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Log in or sign up" />

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/txt_onboarding"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FF0000"
            android:backgroundTint="#52252323" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_txt"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/google" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/btn_toLogin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/mail" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_signup"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Sign Up" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="By contiunuing, you agree to our \n Terms of Service Privacy Policy Content Policy" />

</RelativeLayout>